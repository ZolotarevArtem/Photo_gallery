<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <td>UID</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.uid %></td>
        <% unless current_user.has_role? :editor %>
          <td><%= button_to 'DELETE', "/users/#{user.id}", method: 'delete' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>